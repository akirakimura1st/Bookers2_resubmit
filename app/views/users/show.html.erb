<div class="body">
	<% if flash[:notice] %>
	<div class="succesflash">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<div class="container">
		<div class="row">
			<div class="box"></div>
			<%= render "userinfo", user:@user, book:@book %>

			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag @user, :image,  size: "40x40",format: 'jpeg',fallback: "no_image.jpg", class: "userimage" %></td>
							<td>
								<!-- class ok -->
								<%=link_to book.title, book_path(book), class: "book_#{book.id}" %>
								<!-- class ok -->
							</td>
							<td><%= book.opinion %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<%= render "footer", user:@user, book:@book %>
